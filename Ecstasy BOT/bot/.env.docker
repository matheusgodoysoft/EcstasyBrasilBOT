# Configurações do Docker para Ecstasy Bot
# Copie este arquivo para .env e preencha os valores

# === BANCO DE DADOS ===
DATABASE_URL=postgresql://bot_user:EcstasyBot2024!@postgres:5432/ecstasy_bot
DB_HOST=postgres
DB_PORT=5432
DB_NAME=ecstasy_bot
DB_USER=bot_user
DB_PASSWORD=EcstasyBot2024!

# === DISCORD BOT ===
DISCORD_TOKEN=seu_token_aqui
OWNER_ID=seu_user_id_aqui
PAYMENT_CHANNEL_ID=id_do_canal_pagamentos

# === USUÁRIOS AUTORIZADOS ===
# IDs separados por vírgula
AUTHORIZED_USERS=123456789012345678,987654321098765432

# === WEBHOOK ===
WEBHOOK_PORT=3001

# === LINKS DE PAGAMENTO KIRVANO ===
KIRVANO_STANDARD_PIX_LINK=https://kirvano.com/standard-pix
KIRVANO_STANDARD_CARD_LINK=https://kirvano.com/standard-card
KIRVANO_INFINITY_PIX_LINK=https://kirvano.com/infinity-pix
KIRVANO_INFINITY_CARD_LINK=https://kirvano.com/infinity-card

# === AMBIENTE ===
NODE_ENV=production

# === CONFIGURAÇÕES OPCIONAIS ===
# Timezone
TZ=America/Sao_Paulo

# Logs
LOG_LEVEL=info